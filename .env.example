# chuk-mcp-stage Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Physics Integration
# =============================================================================

# Rapier service URL (default: public service)
RAPIER_SERVICE_URL=https://rapier.chukai.io
# For local development:
# RAPIER_SERVICE_URL=http://localhost:9000

# Rapier timeout in seconds
RAPIER_TIMEOUT=30.0

# Physics provider type: 'rapier', 'mcp', or 'auto'
PHYSICS_PROVIDER=auto

# =============================================================================
# Google Drive OAuth (for persistent storage)
# =============================================================================

# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create project or select existing
# 3. Enable Google Drive API
# 4. Create OAuth 2.0 Client ID (Web application)
# 5. Add authorized redirect URI: http://localhost:8000/oauth/callback
# 6. Copy Client ID and Client Secret below

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth server configuration
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback
OAUTH_SERVER_URL=http://localhost:8000

# Google Drive storage configuration
GOOGLE_DRIVE_ROOT_FOLDER=CHUK
GOOGLE_DRIVE_CACHE_TTL=60

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (for HTTP mode)
SERVER_HOST=0.0.0.0

# Server port (for HTTP mode)
SERVER_PORT=8000

# =============================================================================
# Session Configuration (for OAuth token storage)
# =============================================================================

# Session provider: 'memory' (default) or 'redis' (production)
SESSION_PROVIDER=memory

# Redis configuration (only needed if SESSION_PROVIDER=redis)
# SESSION_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OAuth Token TTLs (optional - defaults shown)
# =============================================================================

# Authorization code lifetime (5 minutes)
# OAUTH_AUTH_CODE_TTL=300

# Access token lifetime (15 minutes)
# OAUTH_ACCESS_TOKEN_TTL=900

# Refresh token lifetime (1 day)
# OAUTH_REFRESH_TOKEN_TTL=86400

# Client registration lifetime (1 year)
# OAUTH_CLIENT_REGISTRATION_TTL=31536000

# External provider token lifetime (1 day)
# OAUTH_EXTERNAL_TOKEN_TTL=86400
